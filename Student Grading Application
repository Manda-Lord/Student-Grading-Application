using System;
 
int examAssignments = 5;

int[] sophiaScores  = new int[7] { 90, 86, 87, 98, 100, 94, 90 };
int[] andrewScores  = new int[6] { 92, 89, 81, 96, 90, 89 };
int[] emmaScores    = new int[8] { 90, 85, 87, 98, 68, 89, 89, 89 };
int[] loganScores   = new int[6] { 90, 95, 87, 88, 96, 96 };
int[] beckyScores   = new int[7] { 92, 91, 90, 91, 92, 92, 92 };
int[] chrisScores   = new int[8] { 84, 86, 88, 90, 92, 94, 96, 98 };
int[] ericScores    = new int[8] { 80, 90, 100, 80, 90, 100, 80, 90 };
int[] gregorScores  = new int[7] { 91, 91, 91, 91, 91, 91, 91 };

// -

string[] studentNames = { "Sophia", "Andrew", "Emma", "Logan", "Becky", "Chris", "Eric", "Gregor" };

int[] studentScores = new int[10];

string currentStudentLetterGrade = "";

// -

Console.WriteLine("Student\t\tGrade\n");

foreach (string name in studentNames)
{
    string currentStudent = name;

    if (currentStudent == "Sophia")
        studentScores = sophiaScores;

    else if (currentStudent == "Andrew")
        studentScores = andrewScores;

    else if (currentStudent == "Emma")
        studentScores = emmaScores;

    else if (currentStudent == "Logan")
        studentScores = loganScores;

    else if (currentStudent == "Becky")
        studentScores = beckyScores;

    else if (currentStudent == "Chris")
        studentScores = chrisScores;

    else if (currentStudent == "Eric")
        studentScores = ericScores;

    else if (currentStudent == "Gregor")
        studentScores = gregorScores;

    else
        continue;

    // -

    // initialise/reset the sum of scored assignments
    int sumAssignmentScores = 0;

    // initialize/reset the calculated average of exam + extra credit scores
    decimal currentStudentGrade = 0;

    //intialise/reset a counter for the number of assignments
    int gradedAssignments = 0;

    // -

    // Master calculation block
    // Adds each score in the array one by one foreach (int score in studentScores)

    foreach (int mark in studentMarks)
    {
        gradedAssignments += 1;

        if (gradedAssignments <= examAssignments)
            // Add the exam score to sum
            sumAssignmentMarks += mark;

        else // Any assignments beyond the 5 are extra; 10% per extra assignment
            sumAssignmentMarks += mark / 10; // Extra credits points
    }

    // -

    currentStudentGrade = (decimal)(sumAssignmentScores) / (examAssignments);

    if (currentStudentGrade >= 97)
        currentStudentLetterGrade = "A+";

    else if (currentStudentGrade >= 93)
        currentStudentLetterGrade = "A";

    else if (currentStudentGrade >= 90)
        currentStudentLetterGrade = "A-";

    else if (currentStudentGrade >= 87)
        currentStudentLetterGrade = "B+";

    else if (currentStudentGrade >= 83)
        currentStudentLetterGrade = "B";

    else if (currentStudentGrade >= 80)
        currentStudentLetterGrade = "B-";

    else if (currentStudentGrade >= 77)
        currentStudentLetterGrade = "C+";

    else if (currentStudentGrade >= 73)
        currentStudentLetterGrade = "C";

    else if (currentStudentGrade >= 70)
        currentStudentLetterGrade = "C-";

    else if (currentStudentGrade >= 67)
        currentStudentLetterGrade = "D+";

    else if (currentStudentGrade >= 63)
        currentStudentLetterGrade = "D";

    else if (currentStudentGrade >= 60)
        currentStudentLetterGrade = "D-";

    else
        currentStudentLetterGrade = "F";

    Console.WriteLine($"{currentStudent}\t\t{currentStudentGrade}\t{currentStudentLetterGrade}");
}

// -

// Below required for running in VS Code (keeps the Output windows open to view results)

Console.WriteLine("Press the Enter key to continue");
Console.ReadLine();
